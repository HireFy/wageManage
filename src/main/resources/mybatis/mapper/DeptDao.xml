<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cobcap.wageManager.dao.DeptDao">
    <resultMap id="deptMap" type="Dept">
        <id column="d_id" property="id"/>
        <result column="d_name" property="name"/>
    </resultMap>

    <select id="getById" resultMap="deptMap">
        select * from dept where d_id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into dept (d_name) values (#{name})
    </insert>

    <update id="updateById">
        update dept
        <set>
            <if test="name != null"> d_name = #{name}</if>
        </set>
        where d_id = #{id}
    </update>

    <delete id="deleteById">
        delete from dept where d_id = #{id}
    </delete>

    <select id="getDepts" resultMap="deptMap">
        select top ${size} * from dept
        where d_id not in (
          select top ${offset} d_id from dept
        )
    </select>

    <select id="isNameExist" resultType="Boolean">
        select
        case when count(*) = 0
        then 0 else 1 end
        from dept
        where d_name=#{name}
    </select>

    <select id="getTotalCount" resultType="int">
        select count(*) from dept
    </select>

    <select id="getDeptNameById" resultType="String">
        select d_name from dept where d_id = #{id}
    </select>

    <select id="getAllDepts" resultMap="deptMap">
        select * from dept
    </select>

    <select id="getIdByDeptName" resultType="Integer">
        select d_id from dept where d_name = #{name}
    </select>

    <select id="getDeptBykw" resultMap="deptMap">
        select *
        from dept
        where d_name like '%' + #{kw} + '%'
    </select>

    <select id="getDeptNameByPlaceId" resultType="String">
        select d_name from dept,place where pl_id = #{placeId} and pl_dept_id = d_id
    </select>
</mapper>