<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cobcap.wageManager.dao.AttendanceDao">
    <resultMap id="attMap" type="Attendance">
        <id column="a_id" property="id"/>
        <result column="p_id" property="personId"/>
        <result column="rate" property="rate"/>
    </resultMap>

    <select id="getById" resultMap="attMap">
        select * from attendance where a_id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into attendance (p_id, rate) values (#{personId}, #{rate})
    </insert>

    <update id="updateById">
        update attendance
        <set>
            <if test="personId != null"> p_id = #{personId},</if>
            <if test="rate != null"> rate = #{rate}</if>
        </set>
        where a_id = #{id}
    </update>

    <delete id="deleteById">
        delete from attendance where a_id = #{id}
    </delete>

    <select id="getAttendances" resultMap="attMap">
        select * from attendance limit #{offset}, #{size}
    </select>

</mapper>